<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>BoardWeb</display-name>
	
	<filter>
	  <filter-name>one</filter-name>
	  <filter-class>com.yedam.common.FilterOne</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>one</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
    <listener>
      <listener-class>org.apache.tiles.extras.complete.CompleteAutoloadTilesListener</listener-class>
    </listener>
	
	<!-- url패턴 실행서블릿 매칭(교수님피셜 옛날방법) -->
	<servlet>
		<servlet-name>main</servlet-name> <!--아래 정의할 서블릿 클래스 이름 -->
		<servlet-class>com.yedam.web.MainServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/mainservlet</url-pattern>
	</servlet-mapping>

	<!-- MVC2패턴 (Controller : 서블릿) -->
	<servlet>
		<servlet-name>front</servlet-name> <!--아래 정의할 서블릿 클래스 이름 -->
		<servlet-class>com.yedam.common.FrontController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>front</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<servlet-class>org.apache.tiles.web.util.TilesDispatchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Tiles Dispatch Servlet</servlet-name>
		<url-pattern>*.tiles</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>